<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/iv_picture_departure_by_destination"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/ll_name_travel"
            android:alpha="0.7"
            android:layout_alignBottom="@id/iv_picture_departure_by_destination"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="6dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:id="@+id/tv_name_owner_by_destination"
                android:text="Daffa Travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:id="@+id/ll_desc"
            android:layout_below="@id/ll_name_travel"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_destination_departure_by_destination"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="Tegal - Jakarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_price_departure_by_destination"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Harga : Rp.130.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>